<h1>Welcome to Infopedia!</h1>
  <div class="row">
    <div class="col-md-8">
      <% if current_user.standard? %>
        <span><%= link_to "Upgrade to premium account", new_charge_path(current_user), class: "btn btn-success" %> </span>
      <% else %>
        <span><%= link_to "Cancel your premium a/c", charge_path(current_user), method: :delete, class: "btn btn-danger", data: {confirm: 'Are you sure you want to unsubscribe?'}  %> </span>
      <% end %>
    </div>
  </div>
