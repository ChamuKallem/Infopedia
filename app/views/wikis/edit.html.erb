<div class="row">
  <div class="col-md-4 col-md-offset-4 page-header">
    Edit Wiki
  </div>
</div>
<div class="row">
 <div class="col-md-8 col-md-offset-2">
   <%= form_for @wiki do |f| %>
     <div class="form-group">
       <%= f.label :title %>
       <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
     </div>
     <div class="form-group">
       <%= f.label :body %>
       <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki contents" %>
     </div>

     <div class="form-group">
       <%= f.label :private %>
       <%= f.check_box :private, placeholder: "Private" %>
     </div>

     <div class="form-group">
       <%= f.submit "Save", class: 'btn btn-basic btn-block' %>
     </div>

   <% end %>

   <% if current_user %>
    <%= render partial: 'collaborators/collaborator', locals: { wiki: @wiki }%>
   <% end %>

 </div>
</div>
