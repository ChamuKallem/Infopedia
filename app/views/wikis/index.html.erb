<div class="row">
  <div class="col-md-4 col-md-offset-4 page-header">
    List of all the Wikis
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% @wikis.each do |wiki| %>
      <div class="list-group">
        <h4><%= link_to wiki.title, wiki, class: "list-group-item" %></h4>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if policy(Wiki).new? %>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-new-wiki btn-block' %>
    <% end %>
  </div>
</div>
